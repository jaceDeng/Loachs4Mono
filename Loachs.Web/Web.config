<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!--loachs 配置开始-->
    <!--cache cookie session 等前缀,防止与现有程序冲突,限英文,一般无需修改-->
    <add key="loachs_siteprefix" value="loachs"/>
    <!-- 程序路径,安装在根目录为"/",安装在blog子目录，则修改为"/blog/" -->
    <add key="loachs_sitepath" value="/"/>
    <!--数据库路径,一般无需修改-->
    <add key="loachs_dbconnection" value="App_Data/loachs.db"/>
    <!--loachs 配置结束-->
  </appSettings>
  <system.web> 
    <compilation debug="true">
    </compilation>
    <customErrors mode="Off"></customErrors>
    <httpModules>
      <add name="loachs_rewriter" type="Loachs.Controls.UrlRewriter"/>
    </httpModules>
    <authentication mode="Forms">
      <forms loginUrl="admin/login.aspx" protection="All" name=".ASPXFORMSAUTH" timeout="30"/>
    </authentication>
    <authorization>
      <allow users="*"/>
    </authorization>
    <globalization fileEncoding="utf-8" requestEncoding="utf-8" responseEncoding="utf-8"/>
    <httpRuntime maxRequestLength="409600"    executionTimeout="3600" />
  </system.web>
  <location path="admin/login.aspx">
    <system.web>
      <authorization>
        <allow  users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="admin">
    <system.web>
      <authorization>
        <deny  users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="common/editor">
    <system.web>
      <authorization>
        <deny  users="?"/>
      </authorization>
    </system.web>
  </location>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="loachs_rewriter" type="Loachs.Controls.UrlRewriter"/>
    </modules>
  </system.webServer>
</configuration>
